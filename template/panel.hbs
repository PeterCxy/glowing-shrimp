<div id="lines" class="mdl-grid">
  <div class="mdl-cell mdl-cell--stretch mdl-cell--2-col mdl-cell--1-col-tablet mdl-cell--hide-phone">
  </div>
  <div id="conversation" class="mdl-cell mdl-cell--stretch mdl-cell--8-col mdl-cell--6-col-tablet mdl-cell--4-col-phone">
    <ul class="conversation-list-item mdl-list">
    {{#each lines}}
      <li class="mdl-list__item mdl-list__item--three-line mdl-list__item--three-line-stretch mdl-grid">
        <span class="message-avatar mdl-cell--stretch mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--1-col-phone">
          <div class="message-avatar-wrapper" style="background-color: {{nickColor tags_array}};">
            <div class="message-avatar-text"><span>{{firstChar (getNick tags_array)}}</span></div>
          </div>
        </span>
        <span class="mdl-list__item-primary-content mdl-cell--10-col mdl-cell--6-col-tablet mdl-cell--2-col-phone">
          <!--<i class="material-icons mdl-list__item-avatar">person</i>-->
          <span>{{getNick tags_array}}</span>
          <span class="mdl-list__item-text-body">{{raw2rich message}}</span>
        </span>
        <span class="mdl-list__item-secondary-content mdl-cell--1-col mdl-cell--1-col-tablet mdl-cell--1-col-phone">
          <span class="mdl-list__item-secondary-info">{{dateFormat date 'hh:mm:ss'}}</span>
        </span>
      </li>
    {{/each}}
    </ul>
  </div>
</div>
<div id="input-bar" class="mdl-shadow--2dp">
  <div id="input-box-wrapper">
    <form action="#">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input id="input-box" class="mdl-textfield__input" type="text" id="sample3">
        <label class="mdl-textfield__label" for="input-box">{{lang 'PANEL_INPUT_HINT'}}</label>
      </div>
    </form>
  </div>

  <button id="action-send" class="mdl-button mdl-js-button mdl-button--icon">
    <i class="material-icons">send</i>
  </button>
  <button id="action-add" class="mdl-button mdl-js-button mdl-button--icon">
    <i class="material-icons">add</i>
  </button>
</div>